<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>24S Coupon</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Arial, sans-serif;
      background: #f7f8fa;
      min-height: 100vh;
    }

    .header {
      background: #fff;
      padding: 24px 30px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: 0 2px 10px rgba(102,126,234,0.06);
      border-radius: 0 0 16px 16px;
      border-bottom: 1.5px solid #ececf3;
    }

    .logo {
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .logo-icon {
      width: 40px;
      height: 40px;
      background: #ececf3;
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: bold;
      color: #764ba2;
      font-size: 1.3rem;
      box-shadow: 0 2px 8px rgba(102,126,234,0.04);
    }

    .logo-text {
      color: #764ba2;
      font-size: 18px;
      font-weight: 700;
      letter-spacing: 1px;
    }

    .header-title {
      color: #2C3E50;
      font-size: 26px;
      font-weight: bold;
      letter-spacing: 1px;
    }

    .home-link {
      color: #764ba2;
      text-decoration: none;
      font-size: 15px;
      font-weight: 500;
      padding: 8px 16px;
      border-radius: 8px;
      background: #f3f0fa;
      transition: background 0.2s;
    }
    .home-link:hover {
      background: #ececf3;
    }

    .main-content {
      padding: 40px 20px 30px 20px;
      max-width: 900px;
      margin: 0 auto;
    }

    .page-intro {
      text-align: center;
      margin-bottom: 32px;
      padding: 24px;
      background: #fff;
      border-radius: 16px;
      box-shadow: 0 2px 12px rgba(102,126,234,0.04);
      border: 1.5px solid #ececf3;
    }
    .page-intro h2 {
      color: #764ba2;
      font-size: 2rem;
      margin-bottom: 10px;
    }
    .page-intro p {
      color: #6C757D;
      font-size: 1.1rem;
      line-height: 1.6;
    }

    .offer-card {
      background: #fff;
      border: 1.5px solid #ececf3;
      border-radius: 16px;
      padding: 32px 36px;
      margin-bottom: 28px;
      box-shadow: 0 4px 16px rgba(102,126,234,0.06);
      display: flex;
      justify-content: space-between;
      align-items: center;
      transition: transform 0.2s, box-shadow 0.2s;
      min-height: 100px;
    }
    .offer-card:hover {
      transform: translateY(-2px) scale(1.01);
      box-shadow: 0 8px 32px rgba(118,75,162,0.10);
      border-color: #d6c8f5;
    }

    .offer-content {
      flex: 1;
      margin-right: 28px;
    }
    .offer-description {
      font-size: 20px;
      font-weight: bold;
      color: #2C3E50;
      margin-bottom: 14px;
      line-height: 1.4;
    }
    .coupon-tag {
      display: inline-block;
      background: #f3f0fa;
      color: #764ba2;
      padding: 7px 18px;
      border-radius: 8px;
      font-size: 13px;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      box-shadow: 0 2px 8px rgba(102,126,234,0.04);
      border: 1px solid #ececf3;
    }
    .deal-tag {
      display: inline-block;
      background: #eaf7f3;
      color: #229954;
      padding: 7px 18px;
      border-radius: 8px;
      font-size: 13px;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      box-shadow: 0 2px 8px rgba(102,126,234,0.04);
      border: 1px solid #d2f0e3;
    }
    .action-button {
      background: #764ba2;
      color: #fff;
      border: none;
      padding: 16px 32px;
      border-radius: 10px;
      font-size: 16px;
      font-weight: 700;
      cursor: pointer;
      transition: all 0.2s;
      text-decoration: none;
      display: inline-block;
      text-align: center;
      min-width: 150px;
      box-shadow: 0 2px 8px rgba(102,126,234,0.08);
    }
    .action-button:hover {
      background: #5e3e9c;
      color: #fff;
      transform: translateY(-2px) scale(1.03);
      box-shadow: 0 6px 20px rgba(118,75,162,0.13);
    }
    .action-button:active {
      transform: translateY(0);
    }

    .page-footer {
      margin-top: 40px;
      padding-top: 20px;
      border-top: 1px solid #ececf3;
      text-align: center;
    }
    .trust-badges {
      display: flex;
      justify-content: center;
      gap: 24px;
      flex-wrap: wrap;
    }
    .trust-badge {
      display: flex;
      align-items: center;
      gap: 8px;
      color: #764ba2;
      font-size: 15px;
      font-weight: 600;
      background: #f3f0fa;
      padding: 8px 18px;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(102,126,234,0.04);
      border: 1px solid #ececf3;
    }
    .badge-icon {
      font-size: 20px;
    }

    @media (max-width: 900px) {
      .main-content {
        padding: 20px 5px 20px 5px;
      }
      .offer-card {
        flex-direction: column;
        align-items: flex-start;
        gap: 18px;
        padding: 24px 16px;
      }
      .offer-content {
        margin-right: 0;
      }
      .action-button {
        align-self: stretch;
        width: 100%;
      }
    }
  </style>
</head>
<body>
  <header class="header">
    <div class="logo">
      <div class="logo-icon">24</div>
      <span class="logo-text">Alo Yoga</span>
    </div>
    <h1 class="header-title">Alo Yoga Coupons</h1>
    <a href="/" class="home-link">‚Üê Back to Home</a>
  </header>

  <main class="main-content">
    <div class="page-intro">
      <h2>Alo Yoga Coupons & Discount Codes</h2>
      <p>Find the latest verified coupons and deals for Alo Yoga. All codes are tested and guaranteed to work!</p>
    </div>
    
    <% coupons.forEach(c => { %>
      <div class="offer-card">
        <div class="offer-content">
          <div class="offer-description"><%= c.desc %></div>
          <% if (c.type === 'Coupon') { %>
            <span class="coupon-tag">Coupon</span>
          <% } else { %>
            <span class="deal-tag">Deal</span>
          <% } %>
        </div>
        <% if (c.type === 'Coupon') { %>
          <button class="action-button" 
                  data-code="<%= c.code %>" 
                  data-desc="<%= c.desc.replace(/"/g, '&quot;') %>" 
                  data-brand="<%= c.brand %>" 
                  onclick="showCouponCode(this)">
            Show Code
          </button>
        <% } else { %>
          <a href="/go/<%= c.brand %>" target="_blank" class="action-button">
            Get Deal
          </a>
        <% } %>
      </div>
    <% }) %>
    
    <div class="page-footer">
      <div class="trust-badges">
        <div class="trust-badge">
          <span class="badge-icon">‚úÖ</span>
          <span>Verified Alo Yoga Codes</span>
        </div>
        <div class="trust-badge">
          <span class="badge-icon">üîí</span>
          <span>Secure Links</span>
        </div>
        <div class="trust-badge">
          <span class="badge-icon">üí∞</span>
          <span>Save Money</span>
        </div>
      </div>
    </div>
  </main>

  <script>
    function showCouponCode(button) {
      console.log('showCouponCode function called');
      
      const code = button.getAttribute('data-code');
      const description = button.getAttribute('data-desc');
      const brand = button.getAttribute('data-brand');
      
      console.log('Parameters:', { code, description, brand });
      
      if (!code || !brand) {
        console.error('Missing required parameters');
        return;
      }
      
      // Êñ∞Âª∫Á™óÂè£ÊòæÁ§∫ÊäòÊâ£Á†ÅÂºπÁ™ó
      const couponUrl = `/stores/${encodeURIComponent(brand)}/coupon/${encodeURIComponent(code)}`;
      console.log('Opening URL:', couponUrl);
      
      const popup = window.open(couponUrl, '_blank', 'width=500,height=400,scrollbars=yes,resizable=yes');
      
      if (popup) {
        console.log('Popup opened successfully');
        // ÂΩìÂâçÁ™óÂè£Ë∑≥ËΩ¨Âà∞offerÈìæÊé•
        setTimeout(() => {
          console.log('Redirecting to:', `/go/${encodeURIComponent(brand)}`);
          window.location.href = `/go/${encodeURIComponent(brand)}`;
        }, 100);
      } else {
        console.log('Popup was blocked by browser');
        // Â¶ÇÊûúÂºπÁ™óË¢´ÈòªÊ≠¢ÔºåÁõ¥Êé•Ë∑≥ËΩ¨
        window.location.href = `/go/${encodeURIComponent(brand)}`;
      }
    }
    
    // Ê∑ªÂä†È°µÈù¢Âä†ËΩΩÂÆåÊàêÁöÑË∞ÉËØï‰ø°ÊÅØ
    document.addEventListener('DOMContentLoaded', function() {
      console.log('Page loaded, checking buttons...');
      const buttons = document.querySelectorAll('.action-button[data-code]');
      console.log('Found', buttons.length, 'Show Code buttons');
      
      buttons.forEach((button, index) => {
        console.log(`Button ${index + 1}:`, {
          code: button.getAttribute('data-code'),
          brand: button.getAttribute('data-brand')
        });
      });
    });
  </script>
</body>
</html> 